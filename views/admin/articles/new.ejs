<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Novo artigo</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/articles/save">
                <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo">
                <textarea class="form-control mt-3" name="body" placeholder="Escreva o artigo aqui" id="article" ></textarea>
                <label class="mt-3">Categoria</label>
                <select name="category" class="form-control" id="">
                    <% categories.forEach((category) =>{%>
                        <option value="<%= category.id %>"><%= category.title %></option>
                    <% }) %>
                </select>
                <button class="btn btn-success mt-3">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

